<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    android:id="@+id/accounts_main_layout"
    android:layout_marginBottom="?attr/actionBarSize"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <ProgressBar
                android:id="@+id/account_progress"
                android:elevation="8dp"
                android:indeterminateTint="@color/black"
                android:visibility="invisible"
                android:background="@android:color/transparent"
                android:indeterminate="true"
                android:layout_gravity="center"
                style="?android:attr/progressBarStyle"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />


            <android.support.design.widget.FloatingActionButton
                android:id="@+id/imageSelectionFab"
                android:src="@drawable/ic_camera_enhance_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                app:fabSize="mini"
                app:layout_constraintBottom_toBottomOf="@+id/circularProfileImage"
                android:layout_marginBottom="0dp"
                android:layout_marginStart="56dp"
                app:layout_constraintLeft_toLeftOf="@+id/circularProfileImage" />

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/circularProfileImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/ic_launcher"
                app:civ_border="true"
                android:layout_marginLeft="32dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="32dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp" />

        </android.support.constraint.ConstraintLayout>

        <android.support.v7.widget.CardView
            app:cardElevation="2dp"
            app:contentPadding="2dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:padding="6dp"
                android:weightSum="15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">




                <TextView
                    android:id="@+id/account_name_text"
                    android:layout_marginStart="8dp"
                    tools:text="Name"
                    android:textColor="#212121"
                    android:layout_weight="13"
                    android:textSize="18sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:id="@+id/account_iv_name"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_create_black_24dp"
                    android:layout_weight="2"
                    android:tint="#1b5e20"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:layout_marginTop="8dp"
            android:padding="10dp"
            android:textSize="14sp"
            android:textColor="#757575"
            android:text="This is the username that is visible at the time of purchase order or any personalised service."
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.CardView
            app:cardElevation="2dp"
            app:contentPadding="2dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:padding="6dp"
                android:weightSum="15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/account_email_text"
                    android:layout_marginStart="8dp"
                    tools:text="Email"
                    android:textColor="#212121"
                    android:layout_weight="13"
                    android:textSize="18sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:clickable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:id="@+id/account_iv_email"
                    android:layout_gravity="center"
                    android:src="@drawable/email"
                    android:layout_weight="2"
                    android:tint="#1b5e20"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            app:cardUseCompatPadding="true"
            app:cardElevation="2dp"
            app:contentPadding="2dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

           <LinearLayout
               android:padding="6dp"
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <TextView
                   android:textSize="16sp"
                   android:textColor="#1b5e20"
                   android:text="Contact and address"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />

               <TextView
                   android:hint="Contact No"
                   android:id="@+id/account_tv_contact"
                   android:layout_marginTop="8dp"
                   android:background="?attr/selectableItemBackground"
                   android:clickable="true"
                   android:textSize="17sp"
                   android:textColor="#212121"
                   tools:text="+91 95123698798"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />

               <View
                   android:layout_marginTop="4dp"
                   android:layout_marginBottom="4dp"
                   android:layout_marginStart="32dp"
                   android:layout_marginEnd="32dp"
                   android:background="#bdbdbd"
                   android:layout_width="match_parent"
                   android:layout_height="1dp"/>

               <TextView
                   android:hint="Address"
                   android:id="@+id/account_tv_address"
                   android:background="?attr/selectableItemBackground"
                   android:clickable="true"
                   android:textSize="17sp"
                   android:textColor="#212121"
                   tools:text="Behind XYZ mall, trilok puri, west sector, New Delhi 305801"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />


           </LinearLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>

</android.support.v4.widget.NestedScrollView>